{
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "target": "ES2020",
        "lib": ["ES2022", "DOM"],
        "noEmit": true,
        "newLine": "lf",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src"]
}
